@model Tareas.Application.ViewModels.TasksSaveViewModel
@{
    ViewData["Title"] = "Delete";
}

<div class="row">
    <div class="col-6 offset-3">
        <div class="card "></div>
        <div class="card-header bg-dark text-light">
            <h2>Seguro que deseas eliminar la tarea @Model.Nombre?</h2>

        </div>
        <div class="card-body">
            <form method="post" asp-controller="Task" asp-action="DeletePost">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">Eliminar</button>
                <a class="btn btn-warning" asp-controller="Task" asp-action="Index">Volver</a>
            </form>
        </div>
    </div>
</div>

